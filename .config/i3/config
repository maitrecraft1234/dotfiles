client.focused          $bg-color           $bg-color          $text-color          #f06154
client.unfocused        $inactive-bg-color $inactive-bg-color $inactive-text-color #f06154
client.focused_inactive $inactive-bg-color $inactive-bg-color $inactive-text-color #f06154
client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          #f06154

